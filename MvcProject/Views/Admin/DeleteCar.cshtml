@model MvcProject.Models.AdminModel

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleContent{
    MyView
}


@section ContentBody{
    @using (Html.BeginForm())
    {
        <html>
        <head>
            <title></title>
            <style>
                #adminBody {
                    height: 700px;
                    width: 1000px;
                    margin: auto;
                    background-color: #87CEEB;
                }

                #adminMenu {
                    height: 45px;
                    width: 1000px;
                    background-color: #6A5ACD;
                }

                #adminPanel {
                    height: auto;
                    width: 980px;
                }

                ul {
                    list-style-type: none;
                    margin: 0;
                    padding: 0;
                    overflow: hidden;
                }

                li {
                    float: left;
                }

                    li a {
                        display: block;
                        color: white;
                        text-align: center;
                        padding: 14px 26px;
                        text-decoration: none;
                    }

                        li a:hover {
                            background-color: #440044;
                            color: white;
                        }
            </style>
            <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        </head>
        <body>
            <div id="adminBody">
                <div id="adminMenu">
                    <ul>

                        <li>
                        <li><a href="@Url.Action("AdminView", "Admin")">ADD NEW CAR</a></li>
                        <li><a href="#news">UPDATE CAR INFO</a></li>
                        <li><a href="#news">DELETE CAR INFO</a></li>
                    </ul>
                </div>
                <div id="adminPanel">
                    
                    <h3 style="text-align:right;">Welcome @Session["loggedIn"]</h3>
                    <center>
                        <table>
                            <tr>
                                <td style="width:60px;">
                                    Make
                                </td>
                                <td style="width:60px; height:50px;">
                                    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        //Write loop and iterate on all elements of m.leagueModel[i]
        listItems.Add(new SelectListItem
        {
            Text = "-- Select --",
            Value = "0",
            Selected = true
        });

        foreach (var item in Model.maketypes)
        {
            if (item.Make != null)
            {
                listItems.Add(new SelectListItem
                {
                    Text = item.Make,
                    Value = item.Make
                });
            }
        }
                                    }     
                   @Html.DropDownListFor(model => model.maketypes, listItems, new
                            {
                                @class = "form-control",
                                @id = "ddlMake",
                                @style = "width:200px;",
                                @onchange = "javascript:GetOtherCarInfo(this.value);"
                            })
                                   
                                </td>
                            </tr>
                            <tr>
                                <td style="width:60px; height:50px;">
                                    Model
                                </td>
                                <td style="width:60px;">
                                    <select class="form-control" id="ddlModel" name="ddlModel" style="width: 200px"></select>
                                    </td>
                                </tr>
                            <tr>
                                <td>

                                </td>
                                <td><input type="submit" value="DELETE" class="form-control" style="background-color:ButtonFace;" /></td>
                            </tr>
                        </table>
                        <h3>@Html.ValueFor(model => model.Status)</h3>
                        </center>
                                <br />
                </div>

                </div>
           </body>

    </html>
    
    }
    }